{
  "cSpell.words": [
    "accesslog",
    "apscheduler",
    "azuretools",
    "cachelib",
    "cssless",
    "devcontainer",
    "htmx",
    "HTMX",
    "hykin",
    "hypercorn",
    "iframe",
    "Instapundit",
    "JSONIFY",
    "langchain",
    "lastrun",
    "llms",
    "mikestead",
    "Monero",
    "msclkid",
    "mustexist",
    "nologo",
    "ollama",
    "Ollama",
    "OLLAMA",
    "pwsh",
    "Slickdeals",
    "Tailscale",
    "Thingiverse",
    "yamlpath",
    "yclid",
    "zcompdump"
  ],
  "python.analysis.extraPaths": [
    "./app",
    "./app/services"
  ],
  "chat.tools.terminal.autoApprove": {
		"date +%F": true,
		"ls": true,
		"/^uv run (pytest|black|isort|behave|python).*/": true,
    "/^uv sync .*/": true,
    "/^make (?:run|format|lint|test(?:-[\\w-]+)?)$/": true,
		"/^git (add|log|status|show\\b.*).*/": true,
		"/^docker (build|inspect|logs|ps).*/": true,
		"behave": true
	},

  // Python indentation settings - force 4 spaces
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true
  },

  // General editor settings to prevent indentation changes
  "editor.detectIndentation": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true
}
